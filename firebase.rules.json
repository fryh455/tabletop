{
  "rules": {
    ".read": "auth != null",
    ".write": "auth != null",
    "rooms": {
      "$roomId": {
        ".write": "auth != null && (data.child('masterUid').val() === auth.uid || !data.exists())",
        "players": {
          "$uid": {
            ".write": "auth != null && auth.uid === $uid"
          }
        },
        "tokens": {
          ".write": "auth != null && (data.parent().child('/masterUid').val() === auth.uid || newData.child('ownerUid').val() === auth.uid)"
        }
      }
    },
    "images": {
      "$imageId": {
        ".write": "auth != null"
      }
    }
  }
}
