{
  "rules": {
    "users": {
      "$uid": {
        ".read": "$uid === auth.uid",
        ".write": "$uid === auth.uid"
      }
    },
    "images": {
      "$imageId": {
        ".read": "auth != null",
        ".write": "auth != null && newData.child('ownerUid').val() === auth.uid"
      }
    },
    "logs": {
      "$roomId": {
        "$logId": {
          ".read": "auth != null && root.child('rooms').child($roomId).child('players').child(auth.uid).exists()",
          ".write": "auth != null && root.child('rooms').child($roomId).child('players').child(auth.uid).exists()"
        }
      }
    },
    "rooms": {
      "$roomId": {
        ".read": "auth != null && data.child('players').child(auth.uid).exists()",
        "roomMeta": {
          ".write": "auth != null && data.child('masterUid').val() === auth.uid"
        },
        "settings": {
          ".write": "auth != null && data.child('masterUid').val() === auth.uid"
        },
        "masterUid": { ".write": "false" },

        "players": {
          "$uid": {
            ".read": "auth != null && data.parent().parent().child('players').child(auth.uid).exists()",
            ".write": "auth != null && ($uid === auth.uid || data.parent().parent().child('masterUid').val() === auth.uid)",
            ".validate": "data.parent().parent().child('masterUid').val() === auth.uid || ($uid === auth.uid && newData.child('uid').val() === auth.uid && (( !data.exists() && (!newData.child('tokenId').exists() || newData.child('tokenId').val() === null) && (!newData.child('characterId').exists() || newData.child('characterId').val() === null) ) || ( data.exists() && newData.child('tokenId').val() === data.child('tokenId').val() && newData.child('characterId').val() === data.child('characterId').val() )))"
          }
        },

        "characters": {
          ".read": "false",
          "$charId": {
            ".read": "auth != null && (data.parent().parent().child('masterUid').val() === auth.uid || data.child('ownerUid').val() === auth.uid || root.child('rooms').child($roomId).child('players').child(auth.uid).child('characterId').val() === $charId)",
            ".write": "auth != null && (data.parent().parent().child('masterUid').val() === auth.uid || newData.child('ownerUid').val() === auth.uid)"
          }
        },

        "tokens": {
          "$tokenId": {
            ".read": "auth != null && data.parent().parent().child('players').child(auth.uid).exists()",
            ".write": "auth != null && (
              data.parent().parent().child('masterUid').val() === auth.uid ||
              (data.child('ownerUid').val() === auth.uid) ||
              (newData.child('ownerUid').val() === auth.uid)
            )"
          }
        },

        "intentions": {
          "$intentId": {
            ".read": "auth != null && data.parent().parent().child('players').child(auth.uid).exists()",
            ".write": "auth != null && (
              data.parent().parent().child('masterUid').val() === auth.uid ||
              newData.child('uid').val() === auth.uid
            )"
          }
        },

        "rolls": {
          "$rollId": {
            ".read": "auth != null && data.parent().parent().child('players').child(auth.uid).exists()",
            ".write": "auth != null && newData.child('userUid').val() === auth.uid"
          }
        }
      }
    }
  }
}
